@model string
@{
    ViewData["Title"] = "Login - Areana ";
    var url = $"/oauth/Authorize{Model}";
}

<script type="text/javascript">
    window.onload = () => {
        debugger;
        let showPassword = document.getElementsByClassName('showPassword');
        let hidePassword = document.getElementsByClassName('hidePassword');
        let showPasswordContainer = document.getElementsByClassName('showPasswordClick');
        let hidePasswordContainer = document.getElementsByClassName('hidePasswordClick');
        setStyle(hidePasswordContainer[0], 'display', 'none');
        addClickEvent(showPassword, function (){
            var txtPassword = document.getElementById('txtPassword');
            txtPassword.setAttribute("type", "text");
            setStyle(showPasswordContainer[0], 'display', 'none');
            setStyle(hidePasswordContainer[0], 'display', 'block');
        });

        addClickEvent(hidePassword,function(){
            var txtPassword = document.getElementById('txtPassword');
            txtPassword.setAttribute("type", "password");
            setStyle(showPasswordContainer[0], 'display', 'block');
            setStyle(hidePasswordContainer[0], 'display', 'none');
        });
    };
    function setStyle(ele, style, val) {
        ele.style[style] = val;
    }
    function addClickEvent(collection, handler) {
        for (let item in collection) {
            if (!isNaN(parseInt(item))) {
                collection[item].addEventListener("click", handler);
            }
        }
    }
</script>
<div class="container container-body">
    <div class="row justify-content-md-center mx-auto login-container">
        <div class="text-center center logo">
            <img src="~/Images/Logo/logo64.png" />
            <div>Arean IoT Home Automation</div>
        </div>
        <form action="@url" method="post">
            <div class="mb-3">
                <label for="txtUsername" class="form-label small">Email address</label>
                <input type="email" autofocus="true" tabindex="1" autocomplete="username" placeholder="Email" class="form-control" name="userName" id="txtUsername" aria-describedby="emailHelp">
                <div id="emailHelp" class="small form-text">We'll never share your email with anyone else.</div>
            </div>
            <div class="mb-3">
                <label for="txtPassword" class="form-label small">Password</label>
                <div class="input-group mb-3">
                    <input type="password" name="password"tabindex="2" placeholder="Password" autocomplete="current-password" style="cursor:pointer;" class="form-control" id="txtPassword">
                    <span class="input-group-text">
                        <svg xmlns="http://www.w3.org/2000/svg" class="showPasswordClick" style="cursor:pointer;z-index:1" width="16" height="16" fill="currentColor" class="bi bi-eye showPassword" viewBox="0 0 16 16">
